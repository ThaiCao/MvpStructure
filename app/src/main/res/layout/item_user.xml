<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <com.mvp.structure.widgets.ImageLoadingView
        android:id="@+id/ivUser"
        android:layout_width="@dimen/width_height_square_img_small"
        android:layout_height="@dimen/width_height_square_img_small"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:scaleType="fitXY" />

    <com.mvp.structure.widgets.styledcontrol.StyledTextView
        android:id="@+id/tvUser"
        style="@style/NormalText"
        android:layout_toRightOf="@+id/ivUser"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/common_margin"
        android:textColor="@color/textPrimary"
        tools:text="User Name"
        android:textStyle="bold" />
</RelativeLayout>
